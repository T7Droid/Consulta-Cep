<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_margin="8dp"
    android:padding="15dp"
    app:cardCornerRadius="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView

                android:layout_width="30dp"
                android:layout_height="30dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/pin_marker"
                app:lottie_loop="true"/>

            <TextView
                android:id="@+id/tvcep"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cep"
                android:textAlignment="center"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/black"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/tvsalvo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_gravity="end"
                android:src="@drawable/estrela_preenchida"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tvlogradouro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logradouro:"
            android:fontFamily="@font/ubuntu_bold"/>

        <TextView
            android:id="@+id/tvcomplemento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complemento: NÃ£o possui"
            android:fontFamily="@font/ubuntu_bold"/>

        <TextView
            android:id="@+id/tvbairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bairro: Gonzaga"
            android:fontFamily="@font/ubuntu_bold"/>

        <TextView
            android:id="@+id/tvcidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cidade: Santos"
            android:fontFamily="@font/ubuntu_bold"/>

        <TextView
            android:id="@+id/tvuf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: SP"
            android:fontFamily="@font/ubuntu_bold"/>

        <TextView
            android:id="@+id/tvddd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DDD: 13"
            android:fontFamily="@font/ubuntu_bold"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>